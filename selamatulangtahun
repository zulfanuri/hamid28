    <iframe src="https://open.spotify.com/embed/track/1UPB5rYJ0bzn6mNSoAHrZC?utm_source=generator" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </div>

  <!-- Background animasi -->
  <div class="stars" id="stars"></div>

  <!-- Konten utama -->
  <div class="container">
    <h1 id="title"></h1>
    <p id="message"></p>

    <div id="input-box">
      <input type="text" id="wishInput" placeholder="Tulis ucapanmu di sini..." />
      <a id="sendBtn" href="#" target="_blank">Kirim ucapanmu ya</a>
    </div>

    <button id="nextBtn">Next ‚û°Ô∏è</button>
  </div>

  <script>
    const titles = {
      1: "üåü Hari ini, 14 Mei 2025...",
      2: "üíå Sebuah Ucapan Tulus Untukmu",
      3: "üßÅ Kenangan indah ini ada untukmu",
      4: "üåà Ada banyak harapan untukmu",
      5: "üéÅ Kirim ucapan hangat kalian untuk Hamid ya..!"
    };

    const messages = {
      1: "Hai Hamid! Hari ini terasa berbeda ya? ü•≥",
      2: "Hari ini... usiamu genap 28 tahun! üéÇ",
      3: "Meski dunia begitu membuatmu lelah, tapi kamu tetap melangkah üíï",
      4: "Langkahmu ke depan penuh warna dan berkah ya, aamiin! üåü",
      5: "Ketik di sini yaa~ üòÅüëá"
    };

    let scene = 1;
    const totalScenes = 5;

    const titleEl = document.getElementById("title");
    const messageEl = document.getElementById("message");
    const nextBtn = document.getElementById("nextBtn");
    const inputBox = document.getElementById("input-box");
    const sendBtn = document.getElementById("sendBtn");
    const wishInput = document.getElementById("wishInput");

    function updateScene() {
      titleEl.innerText = titles[scene];
      messageEl.innerText = messages[scene];

      if (scene === 5) {
        inputBox.style.display = "block";
        nextBtn.style.display = "none";
      } else {
        inputBox.style.display = "none";
        nextBtn.style.display = "inline-block";
      }
    }

    nextBtn.addEventListener("click", () => {
      if (scene < totalScenes) {
        scene++;
        updateScene();
      }
    });

    wishInput.addEventListener("input", () => {
      const message = encodeURIComponent(wishInput.value);
      const phoneNumber = "6289531312191"; // Ganti dengan nomor WA Hamid
      sendBtn.href = `https://wa.me/${phoneNumber}?text=${message}`;
    });

    updateScene();

    // Tambahkan animasi bintang warna-warni
    const starsContainer = document.getElementById('stars');
    const starColors = ['#FF99CC', '#99CCFF', '#FFFF99', '#CCFFCC', '#FFCCFF', '#FFD700', '#00FFFF'];

    for (let i = 0; i < 100; i++) {
      const star = document.createElement('div');
      star.className = 'star';
      star.style.left = `${Math.random() * 100}%`;
      star.style.top = `${Math.random() * -100}%`;
      star.style.animationDuration = `${Math.random() * 3 + 2}s`;
      const color = starColors[Math.floor(Math.random() * starColors.length)];
      star.style.background = color;
      star.style.boxShadow = `0 0 10px ${color}`;
      starsContainer.appendChild(star);
    }
  </script>
