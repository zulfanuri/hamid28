    }

    .stars {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0;
      pointer-events: none;
    }

    .star {
      position: absolute;
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: white;
      animation: sparkle 3s linear infinite;
      box-shadow: 0 0 8px white;
    }

    @keyframes sparkle {
      0% {
        opacity: 0;
        transform: translateY(0) scale(1);
      }
      50% {
        opacity: 1;
        transform: translateY(50vh) scale(1.5);
      }
      100% {
        opacity: 0;
        transform: translateY(100vh) scale(0.8);
      }
    }

    .container {
      position: relative;
